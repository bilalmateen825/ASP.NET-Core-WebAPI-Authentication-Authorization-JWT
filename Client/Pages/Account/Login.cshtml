@page
@model Client.Pages.Account.LoginModel
@{
}


<form method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" asp-for="Credential.Username" aria-describedby="emailHelp">
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
        <span class="text-danger" asp-validation-for="Credential.Username"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" asp-for="Credential.Password" placeholder="Password">
        <span class="text-danger" asp-validation-for="Credential.Password"></span>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="Credential.RememberMe">
        <label class="form-check-label" asp-for="Credential.RememberMe"></label>
        <br />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>